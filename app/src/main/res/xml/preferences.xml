<?xml version="1.0" encoding="UTF-8" ?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	>

	<PreferenceCategory
		android:title="@string/preference_general_group"
		>

		<SwitchPreference
			android:defaultValue="@bool/preference_general_mock_enable_default"
			android:key="@string/preference_general_mock_enable_key"
			android:summary="@string/preference_general_mock_enable_summary"
			android:title="@string/preference_general_mock_enable_title"
			/>

	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/preference_rename_group"
		>

		<SwitchPreference
			android:defaultValue="@bool/preference_rename_enable_default"
			android:key="@string/preference_rename_enable_key"
			android:summary="@string/preference_rename_enable_summary"
			android:title="@string/preference_rename_enable_title"
			/>

		<SwitchPreference
			android:defaultValue="@bool/preference_rename_favorite_enable_default"
			android:key="@string/preference_rename_favorite_enable_key"
			android:summary="@string/preference_rename_favorite_enable_summary"
			android:title="@string/preference_rename_favorite_enable_title"
			/>

		<SwitchPreference
			android:defaultValue="@bool/preference_rename_already_enable_default"
			android:key="@string/preference_rename_already_enable_key"
			android:summary="@string/preference_rename_already_enable_summary"
			android:title="@string/preference_rename_already_enable_title"
			/>

		<!--suppress AndroidElementNotAllowed -->
		<com.alucas.snorlax.app.widget.SummaryEditTextPreference
			android:defaultValue="@string/preference_rename_format_default"
			android:dialogTitle="@string/preference_rename_format_dialog_title"
			android:key="@string/preference_rename_format_key"
			android:summary="@string/preference_rename_format_summary"
			android:title="@string/preference_rename_format_title"
			/>

	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/preference_encounter_group"
		>

		<SwitchPreference
			android:defaultValue="@bool/preference_encounter_notification_enable_default"
			android:key="@string/preference_encounter_notification_enable_key"
			android:summary="@string/preference_encounter_notification_enable_summary"
			android:title="@string/preference_encounter_notification_enable_title"
			/>

		<SwitchPreference
			android:defaultValue="@bool/preference_encounter_dismiss_notification_enable_default"
			android:key="@string/preference_encounter_dismiss_notification_enable_key"
			android:summary="@string/preference_encounter_dismiss_notification_enable_summary"
			android:title="@string/preference_encounter_dismiss_notification_enable_title"
			/>

	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/preference_catch_group">

		<SwitchPreference
			android:defaultValue="@bool/preference_catch_notification_enable_default"
			android:key="@string/preference_catch_notification_enable_key"
			android:summary="@string/preference_catch_notification_enable_summary"
			android:title="@string/preference_catch_notification_enable_title"
			/>

	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/preference_lure_group">

		<SwitchPreference
			android:defaultValue="@bool/preference_lure_enable_default"
			android:key="@string/preference_lure_enable_key"
			android:summary="@string/preference_lure_enable_summary"
			android:title="@string/preference_lure_enable_title"
			/>

	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/preference_gym_group">

		<!--suppress AndroidElementNotAllowed -->
		<com.alucas.snorlax.app.widget.ButtonPreference
			android:summary="@string/preference_gym_pokemon_list_summary"
			android:title="@string/preference_gym_pokemon_list_title"
			/>

		<SwitchPreference
			android:defaultValue="@bool/preference_gym_eject_notification_enable_default"
			android:key="@string/preference_gym_eject_notification_enable_key"
			android:summary="@string/preference_gym_eject_notification_enable_summary"
			android:title="@string/preference_gym_eject_notification_enable_title"
			/>

		<SwitchPreference
			android:defaultValue="@bool/preference_collect_defender_enable_default"
			android:key="@string/preference_collect_defender_enable_key"
			android:summary="@string/preference_collect_defender_enable_description"
			android:title="@string/preference_collect_defender_enable_title"
			/>

	</PreferenceCategory>
</PreferenceScreen>
